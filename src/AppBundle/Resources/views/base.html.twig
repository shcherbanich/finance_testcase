<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Тестовое задание{% endblock %}</title>
        {% block stylesheets %}
            <link type="text/css" rel="stylesheet" media="all" href="{{ asset('/bundles/app/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
            <link type="text/css" rel="stylesheet" media="all" href="{{ asset('/bundles/app/css/main.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
     <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
              <div class="container">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('shares') }}">Все акции</a></li>
                    </ul>
                  {% endif %}
                  <ul class="nav navbar-nav navbar-right">
                      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('_logout') }}">Выход</a></li>
                      {% else %}
                        <li><a href="{{ path('_security_login') }}">Авторизация</a></li>
                        <li><a href="{{ path('registration') }}">Регистрация</a></li>
                      {% endif %}
                  </ul>
                </div>
              </div>
            </nav>
        <div class='content'>
            {% block body %}
                {% block content %}{% endblock %}
            {% endblock %}
        </div>
     </body>
    {% block javascripts %}{% endblock %}
</html>
