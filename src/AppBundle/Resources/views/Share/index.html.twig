{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>Мои акции</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Код</th>
                <th>Дата создания</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('shares_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.fullName }}</td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('shares_show', { 'id': entity.id }) }}">Показать статистику</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('shares_new') }}" class="btn btn-success"> Добавить акцию </a>
    {% endblock %}
